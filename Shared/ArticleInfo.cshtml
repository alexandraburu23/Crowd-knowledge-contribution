
<div class="panel-body">
    <span class="article-content-title" style="font-weight: bold;">Article Content</span>
    <br />
    <div class="article-content-wrapper">
        @Html.Raw(Model.Content)
    </div>
</div>

<div class="article-meta" style=" display: flex; justify-content:space-around;">
    <span>
        <i class="glyphicon glyphicon-time"></i>
        @Model.Date
    </span>  
    <div>
        <i class="glyphicon glyphicon-bookmark"></i>
        <a href="/Categories/Show/@Model.CategoryId">@Model.Category.CategoryName</a>
    </div>
    <div>
        <i class="glyphicon glyphicon-user"></i>
        <strong> @Model.User.UserName </strong>
    </div>
</div>

